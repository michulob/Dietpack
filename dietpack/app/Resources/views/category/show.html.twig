{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kategoria</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
            
    <br />
    
    <table>
        <tbody>
            <tr>
                <th>Składniki</th>
            </tr>
                {% for ing in category.ingredients %}
                    <tr>
                        <td>{{ ing.name }}</td>
                    </tr>
                {% endfor %}
            
        </tbody>
    </table>
    <a href="{{ path('category_index') }}"><button>Powrót do listy</button></a><br />
    <a href="{{ path('category_edit', { 'id': category.id }) }}"><button>Edycja</button></a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Usuń">
    {{ form_end(delete_form) }}
{% endblock %}
                    
