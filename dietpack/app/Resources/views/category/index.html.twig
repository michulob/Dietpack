{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kategorie</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', { 'id': category.id }) }}">Pokaż</a>
                    <a href="{{ path('category_edit', { 'id': category.id }) }}">Usuń</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a href="{{ path('category_new') }}"><button>Stwórz nową kategorie</button></a>

{% endblock %}
