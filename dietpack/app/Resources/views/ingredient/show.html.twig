{% extends 'base.html.twig' %}

{% block body %}
    <h1>Składnik</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Kaloryczność na 100g</th>
                <td>{{ ingredient.calorificPer100 }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('ingredient_index') }}"><button>Powrót do listy</button></a><br />
    <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}"><button>Edycja</button></a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
