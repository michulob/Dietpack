{% extends 'base.html.twig' %}

{% block body %}
    <h1>Diet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ diet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ diet.name }}</td>
            </tr>
            <tr>
                <th>Calorific</th>
                <td>{{ diet.calorific }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if diet.startDate %}{{ diet.startDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('diet_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('diet_edit', { 'id': diet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
