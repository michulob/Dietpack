{% extends 'base.html.twig' %}

{% block body %}
    <h1>Oneorder</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ oneOrder.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if oneOrder.start %}{{ oneOrder.start|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Finish</th>
                <td>{% if oneOrder.finish %}{{ oneOrder.finish|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Expire</th>
                <td>{% if oneOrder.expire %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Timedelivery</th>
                <td>{% if oneOrder.timeDelivery %}{{ oneOrder.timeDelivery|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('oneorder_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('oneorder_edit', { 'id': oneOrder.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
